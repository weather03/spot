<style>
	.header {
  display: flex;
  margin-bottom: 30px;
  align-items: center;
  justify-content: flex-end; }
  .header .header__left {
    flex: 0.5;
    min-width: 70px;
    background-color: var(--text-color);
    color: gray;
    border-radius: 30px;
    padding: 10px;
    display: flex;
    align-items: center;
    height: 40px;
    display: none; }
    .header .header__left input {
      border: none;
      padding-left: 10px;
      width: 100%;
      outline: none; }
      .header .header__left input:focus {
        outline: none; }
      .header .header__left input::placeholder {
        color: gray; }
  .header .header__right {
    display: flex;
    align-items: center;
    background-color: var(--background-color);
    padding: 10px;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.13s ease-in;
    position: relative; }
    .header .header__right:hover {
      background-color: #484848; }
    .header .header__right h4 {
      margin-left: 10px; }
    .header .header__right img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      -o-object-fit: contain;
      -mz-object-fit: contain;
      -webkit-object-fit: contain;
      -o-object-position: center;
      -mz-object-position: center;
      -webkit-object-position: center;
      object-fit: contain;
      object-position: center;
      aspect-ratio: 1/1; }
    .header .header__right .dropdown_menu {
      position: absolute;
      top: 70px;
      width: 100%;
      min-width: 170px;
      background-color: #484848;
      left: 0;
      padding: 10px;
      border-radius: 15px;
      display: none;
      z-index: 100; }
      .header .header__right .dropdown_menu.active {
        display: initial; }
      .header .header__right .dropdown_menu ul {
        width: 100%;
        height: 100%;
        list-style: none; }
        .header .header__right .dropdown_menu ul hr {
          border: 1px solid #767676;
          width: 90%;
          margin: 10px auto; }
        .header .header__right .dropdown_menu ul li {
          width: 100%;
          padding: 10px;
          margin: auto;
          height: 40px;
          display: flex;
          align-items: center;
          justify-content: space-between;
          border-radius: 15px;
          border-bottom: 1px solid #484848; }
          .header .header__right .dropdown_menu ul li:hover {
            background-color: #767676; }

@media screen and (max-width: 700px) {
  .header {
    gap: 1rem; }
    .header .header__left {
      flex: 1; } }

@media screen and (max-width: 700px) {
  .header {
    flex-direction: column; } }

</style>

<header class="header">
	<div class="header__left">
		<i class="fa-solid fa-magnifying-glass"></i>
		<input type="text" placeholder="Artists, Albums, Songs..." />
	</div>
	<div class="header__right">
		<img src="<%= locals.user.avatar %>" alt="User Avatar" />
		<h4><%= locals.user.name %></h4>
		<div class="dropdown_menu">
			<ul>
				<li class="dropdown_menu__home" onclick="window.location.href='/';">
					Home
				</li>
				<li
					class="dropdown_menu__profile"
					onclick="window.location.href='/users/profile/<%= locals.user.id %>';"
				>
					Profile
				</li>
				<li
					class="dropdown_menu__search search_click"
					onclick="window.location.href='/search';"
				>
					Search
				</li>
				<li
					class="dropdown_menu__library"
					onclick="window.location.href='/users/library';"
				>
					Library
				</li>
				<li
					class="dropdown_menu__createPlaylist"
					onclick="window.location.href='/playlists/create';"
				>
					Create Playlist
				</li>
				<li
					class="dropdown_menu__likedSong"
					onclick="window.location.href='/users/liked-songs';"
				>
					Liked Songs
				</li>
				<li class="dropdown_menu__share" id="open-modal2">
					Share Activity
				</li>
				<hr />
				<li
					class="dropdown_menu__logout"
					onclick="window.location.href='/users/logout';"
				>
					Log Out
				</li>
			</ul>
		</div>
	</div>
</header>
