<style>
	.signup {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--background-color);
  flex-direction: column; }
  .signup .signup__heading {
    color: var(--text-color);
    font-size: 3rem;
    margin-bottom: 1.5rem; }
  .signup #signup__form {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column; }
    .signup #signup__form input {
      width: 100%;
      height: 3rem;
      border: none;
      border-bottom: 1px solid var(--text-color);
      background-color: transparent;
      color: var(--text-color);
      font-size: 1.5rem;
      margin: 0.7rem 0;
      padding: 10px;
      outline: none; }
      .signup #signup__form input::placeholder {
        color: var(--text-color);
        font-size: 1.3rem;
        text-align: center; }
      .signup #signup__form input:focus {
        outline: none; }
    .signup #signup__form button {
      width: 100%;
      height: 3rem;
      border: none;
      border-radius: 5px;
      background-color: var(--logo-color);
      color: var(--text-color);
      font-size: 1.5rem;
      margin: 1rem 0;
      outline: none;
      cursor: pointer; }
      .signup #signup__form button:hover {
        background-color: var(--logo-color); }
  .signup .links {
    margin-top: 1rem;
    color: var(--text-color); }
    .signup .links a {
      color: var(--text-color);
      text-decoration: none;
      cursor: pointer; }
      .signup .links a:hover {
        text-decoration: underline; }
      .signup .links a:hover, .signup .links a:focus, .signup .links a:active, .signup .links a:visited, .signup .links a:link {
        color: var(--text-color);
        outline: none; }

</style>

<div class="signup">
	<h1 class="signup__heading"><%= title %></h1>
	<form id="signup__form" action="/users/create-user" method="post">
		<input
			type="text"
			name="name"
			placeholder="Enter Name"
			autocomplete="off"
			required
		/>
		<input
			type="email"
			name="email"
			placeholder="Enter Email"
			autocomplete="off"
			required
		/>
		<input
			type="password"
			name="password"
			placeholder="Enter Password"
			autocomplete="off"
			required
		/>
		<input
			type="password"
			name="confirm_password"
			placeholder="Confirm Password"
			autocomplete="off"
			required
		/>
		<button class="signup__btn" type="submit">Sign Up</button>
	</form>
	<div class="links">
		<a href="/users/login"> Login </a>&ensp;|&ensp;<a href="/"> Home </a>
	</div>
</div>
